<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp">

    <ImageView
        android:id="@+id/imvSong"
        android:src="@mipmap/ic_launcher"
        android:scaleType="center"
        android:layout_centerVertical="true"
        android:layout_width="36dp"
        android:layout_height="36dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/imvPlayOrPauseSong"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/imvSong"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvTitleSong"
            android:text="@string/app_name"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSingleSong"
            android:text="@string/app_name"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    
    <ImageView
        android:id="@+id/imvPlayOrPauseSong"
        android:src="@drawable/ic_pause"
        android:layout_width="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/imvClearSong"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imvClearSong"
        android:src="@drawable/ic_clear"
        android:layout_marginEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />

</RelativeLayout>